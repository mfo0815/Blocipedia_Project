<h1>Edit your Wiki: <%= @wiki.title %></h1>

<div>
  <%= form_for @wiki do |f| %>
    <div class='form-group'>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control'%>
    </div>
    <div class='form-group'>
      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-control'%>
    </div>
    <div class='form-group'>
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
